<%- include("partials/header") %>
<div class="report-container">
  <div class="users">
    <h6>Users</h6>
    <% users.forEach((user)=>{%>
        <% if (user.role=="admin") { %>
            <div class="admin-user user"><%= user.email %>(<%=user.role%>)</div>
        <% } else {%>
            <div class="normal-user user"><%= user.email %></div>
        <%}%>
    
    <%})%>
  </div>
  <div class="table-box">
    <table class="table table-striped table-bordered table-custom">
      <thead class="thead">
        <tr>
          <th>Date</th>
          <th>Time In</th>
          <th>Time Out</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(log => {%>
        <tr>
          <td><%= moment(log.date).format('ddd, DD/MMM/YYYY'); %></td>
          <td><%= moment(log.timeIn).format('HH:mm:ss') + ' Hrs' %></td>
          <td><%= moment(log.timeOut).format('HH:mm:ss') + ' Hrs' %></td>
        </tr>
        <%}); %>
      </tbody>
    </table>
  </div>
</div>
