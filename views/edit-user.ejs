<%- include("partials/header") %>
<div class="edit-user-form-container">
  <div class="edit-user-model show">
    <div class="container mt-5 form-container">
      <form action="/admin/edit-user/<%= id %>" class="form-edit-user" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            class="form-control input"
            id="name"
            name="name"
            value=<%=name%>
            required
          />
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control input"
            id="email"
            name="email"
            value=<%=email%>
            required
          />
          <label for="password">Password</label>
          <input
            type=<%=type%>
            class="form-control input"
            id="password"
            name="password"
            value=<%=password%>
            required
          />
        </div>
        <div class="form-group">
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="role"
              id="adminRole"
              value="admin"
            />
            <label class="form-check-label" for="adminRole">Admin</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="role"
              id="userRole"
              value="user"
              checked
            />
            <label class="form-check-label" for="userRole">User</label>
          </div>
        </div>
        <div class="bottom-buttons">
          <button type="submit" class="btn btn-primary add-user btn-width">
            +Edit User
          </button>
        </div>
      </form>
    </div>
  </div>
</div>